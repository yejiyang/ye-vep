SRC_C = $(AZ_SRC) $(TIMER) $(COMMUNICATION)

OBJ = 	$(SRC_C:.c=.o) $(SRC_F:.f=.o)

all: aztec


#####################################
# Define implicit compilation rules #
#####################################

#%.o:%.f
#	$(FC) $(FFLAGS) -c $<
#%.o:%.c
#	$(CC) $(CFLAGS) -c $<

# solver library

aztec: $(OBJ)
	@echo "Building library $(TARGET)"
	@rm -f libfepgsolv.a
	$(AR) ruv libfepgsolv.a $(OBJ)
	@$(RNLIB) libfepgsolv.a

clean:
	@echo "cleaning ..."
	/bin/rm -f *.o

