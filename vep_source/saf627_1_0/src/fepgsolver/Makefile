FFLAGS_SGIM4  = $(CFLAGS_SGIM4)
FFLAGS_SGI10K = $(CFLAGS_SGI10K)
FFLAGS_DEC    = $(CFLAGS_DEC)
FFLAGS_I860   = $(CFLAGS_I860)
FFLAGS_HP     = -O
FFLAGS_SUNMOS = $(CFLAGS_SUNMOS)
FFLAGS_NCUBE  = $(CFLAGS_NCUBE)
FFLAGS_SP2    = $(CFLAGS_SP2)
FFLAGS_T3E    = -O3 -dp
FFLAGS_LINUX  = -O
FFLAGS_TFLOP  = -O3

